extends layout

block content
    div(class="row")
        div(class="col s6 offset-s3 form-task")
          div(class="col s12 center")
            h2 Edição de Task
            form(method="POST", action="/tasks/" + task.id)
                input(type="hidden", name="_method", value="PUT")
                div(class="input-field col s12")
                    input(type="text", placeholder="Nome", name="name", value=task.name)
                div(class="input-field col s12")
                  select(name="done", class="browser-default")
                    if task.done
                        option(selected, value="true") Sim
                        option(value="false") Não
                    else
                        option(selected, value="false") Não
                        option(value="true") Sim
                div(class="input-field col s12 right")
                    input(type="submit", class="btn-flat teal", value="Salvar")
